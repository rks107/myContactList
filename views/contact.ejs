<html>
    <head>
        <title> <%= title %> </title>
        <script src="https://kit.fontawesome.com/8c456c6aa2.js" crossorigin="anonymous"></script>
        <link href="/css/contact.css" rel="stylesheet" type="text/css">
    </head>
    <body>
        
        <h1> <i class="fas fa-address-book"></i> My Contact List </h1>        

    <div id="contact-details">
        <ul>
            <% for(let i of contact_list) {%>

                <li>
                <div class="contact">
                    <div class="details">
                        <p id="name">  <i class="fas fa-user-tie"></i> <%= i.name %> </p>
                        <p id="contact"> <%= i.phone %> </p>
                    </div>
                    <div class="delete-button">
                        <a href="/delete-contact/?id=<%= i._id %>"> 
                            <!-- &name=<%= i.name %> -->
                            <i class="fas fa-window-close"></i>
                       </a>
                        <!-- <a href="/delete-contact/<%= i.phone %>"> 
                             <i class="fas fa-window-close"></i>
                        </a> -->
                    </div>
                </div>
                   
                </li>

            <% } %>
        </ul>
        <form action="/create-contact" method="POST">
            <input type="text" name="name" placeholder="Name" required>
            <input type="number" name="phone" placeholder="Phone" required>
            <button type="submit"> Add </button>
        </form>
    </div>
    <script src="/js/contact.js"></script>
    </body>
</html>